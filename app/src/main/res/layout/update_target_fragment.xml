<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/swip_shortcut"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/swip_shortcut"
        android:tint="@color/not_black" />

    <LinearLayout
        android:id="@+id/IntrenationalSpeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_20"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/targetNum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:background="@drawable/background_edittext"
            android:ems="10"
            android:hint="   Target "
            android:inputType="textPersonName"
            android:textColorHint="@color/not_black" />

        <ProgressBar
            android:id="@+id/updateTargetProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/not_blue"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateTarget"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/space_10"
            android:backgroundTint="@color/not_blue"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="@dimen/space_20"
            app:cornerRadius="@dimen/space_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

</LinearLayout>
